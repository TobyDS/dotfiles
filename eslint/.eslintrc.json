{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:node/recommended",
    "prettier" // Keeps this to disable conflicting rules, but does not enforce Prettier formatting
  ],
  "plugins": [
    "json"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-console": "off",
    "eqeqeq": "warn",
    "func-style": ["error", "declaration"],
    "object-shorthand": "off",
    "keyword-spacing": "error",
    "linebreak-style": ["error", "unix"],
    "no-extra-boolean-cast": "off",
    "no-plusplus": "off",
    "spaced-comment": "error",
    "quotes": ["error", "single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", "always"],
    "indent": ["error", 2],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1, "maxBOF": 0 }]
  },
  "ignorePatterns": ["*.ejs"]
}
